<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="123dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    app:srcCompat="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/tev1"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="10dp"/>

            </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="1dip"
                android:background="#000000"
                android:layout_below="@+id/ueberschrift"/>
            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Eiga"
                android:textSize="24sp"/>

            <ImageButton
                android:id="@+id/ib1"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/background_light"
                app:srcCompat="@drawable/ic_expand_more_black_18dp"/>

            <LinearLayout
                android:id="@+id/layoutButton1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llh1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibi1"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="@android:color/background_light"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/rubix"/>

                    <ImageButton
                        android:id="@+id/ibi2"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="@android:color/background_light"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/wolf"/>

                    <ImageButton
                        android:id="@+id/ibi3"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="@android:color/background_light"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cat"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llh2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibi4"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="@android:color/background_light"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/rubix"/>

                    <ImageButton
                        android:id="@+id/ibi5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="@android:color/background_light"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/wolf"/>

                    <ImageButton
                        android:id="@+id/ibi6"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="@android:color/background_light"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cat"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llh3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/ibi7"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="@android:color/background_light"
                        android:scaleType="fitStart"
                        app:srcCompat="@drawable/rubix"/>

                    <ImageButton
                        android:id="@+id/ibi8"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="@android:color/background_light"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/wolf"/>

                    <ImageButton
                        android:id="@+id/ibi9"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:layout_marginLeft="30dp"
                        android:backgroundTint="@android:color/background_light"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/cat"/>
                </LinearLayout>

            </LinearLayout>

            <ImageButton
                android:id="@+id/ib2"
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:background="@android:color/background_light"
                app:srcCompat="@drawable/ic_expand_less_black_18dp"/>

        </LinearLayout>
    </ScrollView>


</LinearLayout>